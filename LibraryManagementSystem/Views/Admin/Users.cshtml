@model IEnumerable<LibraryManagementSystem.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-users me-2 text-primary"></i>User Management
        </h2>
        <p class="text-muted mb-0">Manage library users and their roles</p>
    </div>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stats-card">
            <div class="feature-icon text-primary">
                <i class="fas fa-users fa-2x"></i>
            </div>
            <div class="stats-number">@Model.Count()</div>
            <div class="stats-label">Total Users</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card">
            <div class="feature-icon text-success">
                <i class="fas fa-user me-1"></i>
            </div>
            <div class="stats-number">@Model.Count(u => u.Role == "User")</div>
            <div class="stats-label">Regular Users</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card">
            <div class="feature-icon text-warning">
                <i class="fas fa-user-shield fa-2x"></i>
            </div>
            <div class="stats-number">@Model.Count(u => u.Role == "Librarian")</div>
            <div class="stats-label">Librarians</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card">
            <div class="feature-icon text-danger">
                <i class="fas fa-crown fa-2x"></i>
            </div>
            <div class="stats-number">@Model.Count(u => u.Role == "Admin")</div>
            <div class="stats-label">Admins</div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header bg-gradient-primary text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>All Users
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-user me-1"></i>Name</th>
                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                        <th><i class="fas fa-mobile me-1"></i>Mobile</th>
                        <th><i class="fas fa-shield-alt me-1"></i>Role</th>
                        <th><i class="fas fa-cogs me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="animate__animated animate__fadeInUp">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-primary me-3">
                                        @user.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <strong>@user.Name</strong>
                                        <br><small class="text-muted">ID: @user.UserID</small>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.MobileNumber</td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-crown me-1"></i>@user.Role
                                    </span>
                                }
                                else if (user.Role == "Librarian")
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-user-shield me-1"></i>@user.Role
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-user me-1"></i>@user.Role
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (user.Role == "User")
                                    {
                                        <form asp-action="PromoteToLibrarian" asp-route-id="@user.UserID" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to promote @user.Name to Librarian?')">
                                            <button type="submit" class="btn btn-outline-warning btn-sm" title="Promote to Librarian">
                                                <i class="fas fa-arrow-up"></i>
                                            </button>
                                        </form>
                                    }
                                    else if (user.Role == "Librarian")
                                    {
                                        <form asp-action="DemoteToUser" asp-route-id="@user.UserID" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to demote @user.Name to User?')">
                                            <button type="submit" class="btn btn-outline-secondary btn-sm" title="Demote to User">
                                                <i class="fas fa-arrow-down"></i>
                                            </button>
                                        </form>
                                    }

                                    @if (user.Role != "Admin")
                                    {
                                        <form asp-action="DeleteUser" asp-route-id="@user.UserID" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete @user.Name? This action cannot be undone!')">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete User">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-users fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">No users found</h4>
        <p class="text-muted">There are currently no users in the system.</p>
    </div>
}

@section Scripts {
    <script>
        // Add animation delay to table rows
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 16px;
    }

    .animate__fadeInUp {
        animation-duration: 0.8s;
    }

    .stats-card {
        animation-delay: calc(var(--animation-order) * 0.1s);
    }
</style>
