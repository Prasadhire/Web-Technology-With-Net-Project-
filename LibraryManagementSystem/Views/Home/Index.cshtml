@{
    ViewData["Title"] = "Digital Library - Home";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">
                    Welcome to <span class="text-warning">Digital Library</span>
                </h1>
                <p class="lead text-white-50 mb-4 fs-5">
                    Discover, borrow, and explore a world of knowledge. Your gateway to endless learning and imagination.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg px-4 py-3">
                            <i class="fas fa-book-open me-2"></i>Browse Books
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-light btn-lg px-4 py-3">
                                <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Librarian"))
                        {
                            <a asp-controller="Librarian" asp-action="Dashboard" class="btn btn-outline-light btn-lg px-4 py-3">
                                <i class="fas fa-tachometer-alt me-2"></i>Librarian Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Transactions" asp-action="MyTransactions" class="btn btn-outline-light btn-lg px-4 py-3">
                                <i class="fas fa-book me-2"></i>My Books
                            </a>
                        }
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4 py-3">
                            <i class="fas fa-user-plus me-2"></i>Get Started
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="fas fa-book-reader fa-10x text-white-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold text-primary mb-3">Why Choose Our Library?</h2>
                <p class="lead text-muted">Experience the future of library management with our modern digital platform</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm animate__animated animate__fadeInUp">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-infinity fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold">24/7 Access</h5>
                        <p class="card-text text-muted">Access your favorite books anytime, anywhere with our digital platform.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-search fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold">Smart Search</h5>
                        <p class="card-text text-muted">Find books instantly with our advanced search and filtering system.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm animate__animated animate__fadeInUp" style="animation-delay: 0.4s">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-heart fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold">Personal Wishlist</h5>
                        <p class="card-text text-muted">Save your favorite books and get notified when they're available.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-5 bg-gradient-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stats-number display-4 fw-bold mb-2">@ViewBag.Stats?.TotalBooks ?? 0</div>
                <div class="h6 text-white-50">Books Available</div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stats-number display-4 fw-bold mb-2">@ViewBag.Stats?.TotalUsers ?? 0</div>
                <div class="h6 text-white-50">Active Members</div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stats-number display-4 fw-bold mb-2">@ViewBag.Stats?.ActiveBorrowings ?? 0</div>
                <div class="h6 text-white-50">Books Borrowed</div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stats-number display-4 fw-bold mb-2">@ViewBag.Stats?.TotalCategories ?? 0</div>
                <div class="h6 text-white-50">Categories</div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Books Section -->
@if (ViewBag.RecentBooks != null && ViewBag.RecentBooks.Count > 0)
{
    <section class="py-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12 text-center">
                    <h2 class="display-6 fw-bold text-primary mb-3">Recently Added Books</h2>
                    <p class="text-muted">Check out the latest additions to our collection</p>
                </div>
            </div>

            <div class="row">
                @foreach (var book in ViewBag.RecentBooks)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 border-0 shadow-sm book-card animate__animated animate__fadeInUp">
                            <div class="card-body text-center p-4">
                                <div class="book-cover-placeholder mb-3">
                                    <i class="fas fa-book fa-3x text-primary"></i>
                                </div>
                                <h6 class="card-title fw-bold mb-2">@book.Title</h6>
                                <p class="card-text text-muted small mb-2">by @book.Author</p>
                                <span class="badge bg-primary mb-3">@book.Category</span>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        @book.AvailableCopies copy@(book.AvailableCopies != 1 ? "ies" : "") available
                                    </small>
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookID"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-book-open me-2"></i>Explore All Books
                </a>
            </div>
        </div>
    </section>
}

