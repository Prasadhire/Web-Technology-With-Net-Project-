@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 animate__animated animate__fadeInUp">
            <div class="card-header bg-gradient-primary text-white text-center py-4">
                <i class="fas fa-book-reader fa-3x mb-3"></i>
                <h3 class="card-title mb-1 fw-bold">
                    Welcome Back
                </h3>
                <p class="mb-0 opacity-75">Sign in to your Digital Library account</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input name="email" class="form-control" placeholder="Enter your email" id="emailInput" />
                        <label for="emailInput">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                    </div>

                    <div class="form-floating mb-4">
                        <input name="password" type="password" class="form-control" placeholder="Enter your password" id="passwordInput" />
                        <label for="passwordInput">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>
                    </div>

                    <div class="text-center mb-4">
                        <p class="mb-0">Don't have an account?
                            <a asp-action="Register" class="text-decoration-none fw-bold text-primary">
                                Register here
                            </a>
                        </p>
                    </div>

                    <!-- Demo Accounts -->
                    <div class="demo-accounts p-3 bg-light rounded-3">
                        <h6 class="text-center mb-3 text-primary">
                            <i class="fas fa-info-circle me-1"></i>Demo Accounts
                        </h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <div class="demo-account-card p-2 bg-white rounded-2 border">
                                    <small class="fw-bold text-success">Admin Account</small><br>
                                    <small class="text-muted">admin@library.com</small><br>
                                    <small class="text-muted">admin123</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="demo-account-card p-2 bg-white rounded-2 border">
                                    <small class="fw-bold text-warning">Librarian Account</small><br>
                                    <small class="text-muted">librarian@library.com</small><br>
                                    <small class="text-muted">lib123</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center bg-light">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i>Secure login powered by ASP.NET Identity
                </small>
            </div>
        </div>

        <!-- Additional Info -->
        <div class="text-center mt-3">
            <small class="text-muted">
                By signing in, you agree to our
                <a href="#" class="text-decoration-none">Terms of Service</a> and
                <a href="#" class="text-decoration-none">Privacy Policy</a>
            </small>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .min-vh-100 {
        min-height: 100vh;
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
    }

    .demo-accounts {
        border: 1px solid rgba(0,0,0,0.1);
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .demo-account-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .demo-account-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .animate__fadeInUp {
        animation-duration: 0.8s;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        padding: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #5a6fd8, #6a4190);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus email input
            const emailInput = document.getElementById('emailInput');
            if (emailInput) {
                emailInput.focus();
            }

            // Demo account click to fill
            const demoCards = document.querySelectorAll('.demo-account-card');
            demoCards.forEach(card => {
                card.addEventListener('click', function() {
                    const email = this.querySelectorAll('small')[1].textContent;
                    const password = this.querySelectorAll('small')[2].textContent;

                    document.querySelector('input[name="email"]').value = email;
                    document.querySelector('input[name="password"]').value = password;

                    // Add visual feedback
                    this.style.background = 'linear-gradient(135deg, #d4edda, #c3e6cb)';
                    setTimeout(() => {
                        this.style.background = '';
                    }, 300);
                });
            });

            // Form validation enhancement
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const email = document.querySelector('input[name="email"]').value;
                const password = document.querySelector('input[name="password"]').value;

                if (!email || !password) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Missing Information',
                        text: 'Please fill in both email and password fields.',
                        icon: 'warning',
                        confirmButtonColor: '#3085d6'
                    });
                }
            });
        });
    </script>
}
