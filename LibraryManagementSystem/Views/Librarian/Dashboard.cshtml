@{
    ViewData["Title"] = "Librarian Dashboard";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>Librarian Dashboard
            </h2>
            <p class="text-muted mb-0">Welcome back! Here's what's happening in your library.</p>
        </div>
        <div class="btn-group">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Book
            </a>
            <a asp-controller="Transactions" asp-action="Index" class="btn btn-info">
                <i class="fas fa-list-alt me-2"></i>View All Transactions
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
            <div class="stats-card text-center animate__animated animate__fadeInUp">
                <div class="feature-icon text-primary">
                    <i class="fas fa-book fa-2x"></i>
                </div>
                <div class="stats-number">@ViewBag.Stats.TotalBooks</div>
                <div class="stats-label">Total Books</div>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-primary" style="width: 100%"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
            <div class="stats-card text-center animate__animated animate__fadeInUp" style="animation-delay: 0.1s">
                <div class="feature-icon text-success">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <div class="stats-number">@ViewBag.Stats.TotalUsers</div>
                <div class="stats-label">Total Users</div>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-success" style="width: 100%"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
            <div class="stats-card text-center animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                <div class="feature-icon text-info">
                    <i class="fas fa-exchange-alt fa-2x"></i>
                </div>
                <div class="stats-number">@ViewBag.Stats.ActiveBorrowings</div>
                <div class="stats-label">Active Borrowings</div>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-info" style="width: 100%"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
            <div class="stats-card text-center animate__animated animate__fadeInUp" style="animation-delay: 0.3s">
                <div class="feature-icon text-danger">
                    <i class="fas fa-clock fa-2x"></i>
                </div>
                <div class="stats-number">@ViewBag.Stats.OverdueBooks</div>
                <div class="stats-label">Overdue Books</div>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-danger" style="width: 100%"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
            <div class="stats-card text-center animate__animated animate__fadeInUp" style="animation-delay: 0.4s">
                <div class="feature-icon text-secondary">
                    <i class="fas fa-heart fa-2x"></i>
                </div>
                <div class="stats-number">@ViewBag.Stats.TotalWishlists</div>
                <div class="stats-label">Wishlist Items</div>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-secondary" style="width: 100%"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6 mb-4">
            <div class="stats-card text-center animate__animated animate__fadeInUp" style="animation-delay: 0.5s">
                <div class="feature-icon text-warning">
                    <i class="fas fa-check-circle fa-2x"></i>
                </div>
                <div class="stats-number">@ViewBag.Stats.TotalTransactions</div>
                <div class="stats-label">Total Transactions</div>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-warning" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Analytics Row -->
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Library Overview
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="libraryChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-gradient-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>Monthly Activity
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="activityChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Transactions -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>Recent Transactions
                    </h5>
                    <a asp-controller="Transactions" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-external-link-alt me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="fas fa-user me-1"></i>User</th>
                                    <th><i class="fas fa-book me-1"></i>Book</th>
                                    <th><i class="fas fa-calendar me-1"></i>Borrowed Date</th>
                                    <th><i class="fas fa-info-circle me-1"></i>Status</th>
                                    <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in ViewBag.RecentTransactions)
                                {
                                    <tr class="animate__animated animate__fadeInUp">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary me-2">
                                                    @transaction.User.Name.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <strong>@transaction.User.Name</strong>
                                                    <br><small class="text-muted">@transaction.User.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>@transaction.Book.Title</strong>
                                            <br><small class="text-muted">by @transaction.Book.Author</small>
                                        </td>
                                        <td>@transaction.BorrowedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (transaction.ReturnDate == null)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock me-1"></i>Borrowed
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Returned
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Transactions" asp-action="Details" asp-route-id="@transaction.TransactionID"
                                                   class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (transaction.ReturnDate == null)
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm"
                                                            onclick="markAsReturned(@transaction.TransactionID)" title="Mark as Returned">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #28a745, #20c997);
    }

    .avatar-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 14px;
    }

    .animate__fadeInUp {
        animation-duration: 0.8s;
    }

    .stats-card {
        animation-delay: calc(var(--animation-order) * 0.1s);
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Library Overview Chart
            const libraryCtx = document.getElementById('libraryChart').getContext('2d');
            new Chart(libraryCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Available Books', 'Borrowed Books', 'Overdue Books'],
                    datasets: [{
                        data: [@ViewBag.Stats.TotalBooks - @ViewBag.Stats.ActiveBorrowings, @ViewBag.Stats.ActiveBorrowings, @ViewBag.Stats.OverdueBooks],
                        backgroundColor: ['#28a745', '#ffc107', '#dc3545'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Monthly Activity Chart
            const activityCtx = document.getElementById('activityChart').getContext('2d');
            new Chart(activityCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Borrowings',
                        data: [12, 19, 15, 25, 22, 30],
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

        function markAsReturned(transactionId) {
            Swal.fire({
                title: 'Mark as Returned?',
                text: 'Are you sure you want to mark this book as returned?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, mark as returned'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Here you would typically make an AJAX call to update the transaction
                    Swal.fire('Success!', 'Book marked as returned.', 'success');
                    // Reload the page or update the UI
                    setTimeout(() => location.reload(), 1500);
                }
            });
        }
    </script>
}
