@model IEnumerable<LibraryManagementSystem.Models.Transaction>

@{
    ViewData["Title"] = "My Borrowed Books";
}

<h2>My Borrowed Books</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Author</th>
            <th>Borrowed Date</th>
            <th>Return Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Author</td>
                <td>@item.BorrowedDate.ToString("MM/dd/yyyy")</td>
                <td>@(item.ReturnDate?.ToString("MM/dd/yyyy") ?? "Not Returned")</td>
                <td>
                    @if (item.ReturnDate == null)
                    {
                        <span class="badge bg-warning">Currently Borrowed</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Returned</span>
                    }
                </td>
                <td>
                    @if (item.ReturnDate == null)
                    {
                        <form asp-action="Return" asp-route-id="@item.TransactionID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">Return Book</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven't borrowed any books yet.
    </div>
}